@model DummyProject.Models.Employee



@using (Html.BeginForm("CreateEmployeeH", "Employee", FormMethod.Post))
 {
<table cellpadding="0" cellspacing="0">
    <tr>
        <th colspan="2" align="center">Person Details</th>
    </tr>
    <tr>
        <td>Name: </td>
        <td>
            @Html.TextBoxFor(m => m.Name)
        </td>
    </tr>
   
