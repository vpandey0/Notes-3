@model IEnumerable<DapperInMVC.Models.Employee>

@{
    ViewBag.Title = "GetEmployees";
}

<h2>GetEmployees</h2>

<p>
    @Html.ActionLink("Create", "CreateEmployees") |
    @*@Html.ActionLink("Search", "SearchEmployees")*@

</p>
@using (Html.BeginForm("GetEmployees", "Home", FormMethod.Post))
{
    <h2>SearchEmployeeDetails</h2>


    <table class="table">
        <tr>
            <td>Enter the Id: </td>
            <td>
                @Html.TextBox("Id") <br />
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="Search" class="btn btn-danger" />
            </td>
        </tr>
        </table>
}
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "UpdateEmployees", new { id = item.Id })|

                        @Html.ActionLink("Delete", "DeleteEmployees", new { id = item.Id }) |

                    </td>
                </tr>
            }

        </table>
